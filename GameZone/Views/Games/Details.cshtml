@model GameZone.Models.Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-light rounded rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 p-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    <span class="badge bg-primary fs-5">@Model.Category?.Name</span>
                    <p class="fs-4 m-3">@Model.Description</p>
                </div>
                <div>
                    @foreach (var device in Model.GameDevices)
                    {
                        <i class="@device.Device.Icon fs-1 me-2 text-primary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100 "/>

            </div>
        </div>
    </div>
</div>

