@model EditGameViewModel
@{
    ViewData["Title"] = "Edit Game";
}

<h2 style="overflow:hidden">
    <i class="bi bi-plus-circle-dotted"></i>
    Edit Game
</h2>

<form asp-action="Edit" asp-controller="Games" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div> 
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4">Category</label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories" data-placeholder="Select Category">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger d-block"></span>

            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4">Devices</label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
                        data-placeholer="Select Devices" multiple>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger d-block"></span>

            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover">
                <small class="form-text text-muted">Only @FileSettings.AllowedExtensions are allowed with max size @FileSettings.MaxFileSizeInMB MB.</small>
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-3">Submit</button>
        </div>
        <div class="col-md-6">
            <img src="@($"{FileSettings.ImagesPath}/{Model.CurrentCover}")" alt="@Model.Name" class="cover-preview m-lg-3">
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


