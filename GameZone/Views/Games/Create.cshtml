@model GamesViewModel
@{
    ViewData["Title"] = "Add Game";
}

<h2>
    <i class="bi bi-plus-circle-dotted"></i>
    Add A New Game
</h2>

<form asp-action="Create" asp-controller="Games" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4">Category</label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option value="0">--Select Category--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4">Devices</label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices" multiple>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover">
                <small  class="form-text text-muted">Only .jpg, .jpeg, .png are allowed with max size 1MB.</small>
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-3">Submit</button>
        </div>
        <div class="col-md-6">

        </div>
    </div>
</form>


